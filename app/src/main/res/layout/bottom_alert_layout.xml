<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:id="@+id/design_bottom_sheet"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:behavior_hideable="true"
              android:padding="6dp"
              app:behavior_peekHeight="56dp"
              app:layout_behavior="android.support.design.widget.BottomSheetBehaviour">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:id="@+id/lt_Books"
                  android:orientation="horizontal"
                  android:layout_gravity="center_vertical"
                  android:weightSum="3">
        <ImageView
                android:id="@+id/ivBooks"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/circleshape"
                android:padding="10dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Books"
                  android:layout_gravity="center_vertical"
        />


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:id="@+id/lt_Clothes"
                  android:orientation="horizontal"
                  android:layout_gravity="center_vertical"
                  android:weightSum="3">
        <ImageView
                android:id="@+id/ivClothes"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/circleshape"
                android:padding="10dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Clothes"
                  android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:id="@+id/lt_Other"
                  android:layout_height="50dp"
                  android:orientation="horizontal"
                  android:layout_gravity="center_vertical"
                  android:weightSum="3">
        <ImageView
                android:id="@+id/ivOther"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/circleshape"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Other"
                  android:layout_gravity="center_vertical"/>

    </LinearLayout>



</LinearLayout>